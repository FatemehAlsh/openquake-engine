FROM python:3.11 AS compile-image
LABEL maintainer="GEM Foundation <devops@openquake.org>" \
       vendor="GEM Foundation"
RUN apt-get update &&  \
    apt-get install -y --no-install-recommends build-essential gcc git libcap-dev ssh dnsutils telnet netbase net-tools lsof tcpdump sudo strace time gosu
ARG oq_branch
ENV LANG en_US.UTF-8

ARG DOCKER_USER=openquake

RUN adduser "$DOCKER_USER"

WORKDIR /usr/src
# Create venv
ENV VIRTUAL_ENV=/opt/openquake
RUN python3 -m venv $VIRTUAL_ENV
ENV PATH="$VIRTUAL_ENV/bin:$PATH"
# Install dependencies and engine
RUN git clone https://github.com/gem/oq-engine.git --depth=1 --branch $oq_branch && \
    cd oq-engine && pip --disable-pip-version-check install -e . -r requirements-py311-linux64.txt --no-warn-script-location
#
ENV LOCKDOWN=False
ENV NUMBA_CACHE_DIR=/tmp
ENV MPLCONFIGDIR=/tmp
#
#
EXPOSE 8800:8800
STOPSIGNAL SIGINT
COPY scripts/entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh \
	&& sed "s/\$DOCKER_USER/$DOCKER_USER/g" -i /usr/local/bin/entrypoint.sh
#
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
CMD ["/bin/bash"]
